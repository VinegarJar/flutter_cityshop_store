##在项目文件android目录下执行命令fastlane uploadFir生成IPA文件,并且会自动上传到Fir,发送到钉钉群通知
#'/Users/a888/Documents/flutter_cityshop_store/flutter_cityshop_store/build/app/outputs/flutter-apk/app-release.apk'    使用flutter打包命令 flutter build apk
# 安装插件fastlane add_plugin fir_cli

default_platform(:android)

platform :android do
  desc "Fir测试版本apk"
  lane :uploadFir do
    gradle(task: "clean assembleRelease")
    fir_cli api_token:"d2f653948d859d2f06f88eb4d1d39e8f", specify_file_path:"/Users/a888/Documents/flutter_cityshop_store/flutter_cityshop_store/build/app/outputs/flutter-apk/app-release.apk"
    puts "============================上传android测试版到Fir成功============================\n"
  end

  desc "Submit a new Beta Build to Crashlytics Beta"
  lane :beta do
    gradle(task: "clean assembleRelease")
    crashlytics
  
    # sh "your_script.sh"
    # You can also use other beta testing services here
  end

  desc "Deploy a new version to the Google Play"
  lane :deploy do
    gradle(task: "clean assembleRelease")
    upload_to_play_store
  end
end
